<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="daca" transaction-type="RESOURCE_LOCAL">

		<!-- <jta-data-source>java:/dacaDS</jta-data-source> -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.edu.ifpb.mt.daca.entities.Aluno</class>
		<class>br.edu.ifpb.mt.daca.entities.Autor</class>
		<class>br.edu.ifpb.mt.daca.entities.Livro</class>
		<class>br.edu.ifpb.mt.daca.entities.Pessoa</class>

		<properties>
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/bibliotecaDACA"/>
			<property name="hibernate.connection.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.username" value="indy"/>
			<property name="hibernate.connection.password" value="indy"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show.sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>